    <style>
        .chart-container {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
        }

        canvas {
            width: 100% !important;
            height: 300px !important;
        }

        .dashboard {
            padding: 20px;
        }

        .section-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: center;
            color: #333;
        }

        .top-products,
        .top-categories {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        .product,
        .category {
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin: 10px;
            padding: 20px;
            width: 220px;
            text-align: center;
            transition: transform 0.3s ease;
            background-color: #fff;
        }

        .product:hover,
        .category:hover {
            transform: scale(1.05);
        }

        .product img,
        .category img {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
        }

        .product h3,
        .category h3 {
            font-size: 18px;
            color: #333;
            margin: 15px 0;
        }

        .product p,
        .category p {
            font-size: 16px;
            color: #777;
        }

        .product {
            animation: fadeIn 1s forwards;
            animation-delay: calc(var(--delay) * 1s);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            transition: transform 0.3s ease-in-out;
        }

        .product:hover {
            transform: translateY(-5px);
        }


        .category {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            transition: transform 0.3s ease-in-out;
        }

        .category:hover {
            transform: translateY(-5px);
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        @media (max-width: 768px) {

            .product,
            .category {
                flex-basis: 100%;
                /* Full width on small screens */
            }
        }

        @keyframes fadeIn {
            0% {
                opacity: 0;
            }

            100% {
                opacity: 1;
            }
        }
    </style>
